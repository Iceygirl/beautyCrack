/**index.wxss**/
.order-form-wrap {
  background-color: #f6f5fa;
}

.order-form-title {
  padding:20rpx 0;
  background-color:#ffffff;

}

.order-icon {
  width:36rpx;
  height:36rpx;
  margin-right:20rpx;
}

.order-form {
  background-color:#fff;
}

.order-form-item {
  border-top:1px solid #f6f5fa;
  padding:20rpx 30rpx;
  font-size:12pt;
  color:#666;
}

.input-title {
  margin-right:20rpx;
}

.order-form-location {
  justify-content: space-between;
}

.location_icon {
  width:30rpx;
  height:36rpx;
}

.order-form-address {
  flex: 1;
  max-width: 220rpx;
}

.order-submit {
  background-color: #ffac36;
  color: #fff;
  width: 90%;
  border-radius: 50rpx;
  margin-top: 10rpx;
  border: 0 !important;
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
  box-shadow: 0 1px #ccc, 2px 2px 10px #ccc;
}

.submit-hover {
  background-color: #e8b20d;
}
