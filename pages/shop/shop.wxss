/* pages/shop/shop.wxss */
scroll-view {
  height:300rpx;
}


.search-wrap {
  margin:10rpx 30rpx;
  padding:30rpx 20rpx;
  border:1px solid #dedede;
  border-radius: 10rpx;
}

.search-icon {
  display: flex;
  margin-right:20rpx;
}

.shop-list{
  width:100%;
  background-color: #f6f5fa;
  padding:20rpx;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.shop-list-item {
  width:340rpx;
  background-color:#fff;
  border:1px solid #dedede;
  padding:20rpx;
  margin-bottom:20rpx;
}
.shop-list-item:nth-of-type(2n+1){
  margin-right:20rpx;
}
.shop-list-item-img {
  width:300rpx;
  height:238rpx;
}
.shop-list-item-title {
  font-size:12pt;
  color:#666;
  padding:20rpx 0;
}
.shop-list-item-bottom {
  justify-content: space-between;
  align-items: center;
}
.shop-list-item-price {
  font-size:12pt;
  color:#fc2a57;
  margin-right:10rpx;
}
.shop-list-item-sell {
  border:1px solid #ffac34;
  border-radius:6rpx;
  padding:0 14rpx;
  font-size:10pt;
  color:#ffac34;
}
.shopping_cart_red-icon {
  width:30rpx;
  height:30rpx;
}

.hover-class {
  background-color:#f6f5fa;
}